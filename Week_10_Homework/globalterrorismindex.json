{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "height": 500,
    "width": 1000,
    "projection": {
        "type": "equalEarth"
    },
    "params": [
        {
            "name": "Year_selection",
            "value": 2012,
            "bind": {
                "input": "range",
                "min": 2012,
                "max": 2022,
                "step": 1,
                "name": "Year:  "
            }
        }
    ],
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/chewyuhan/FIT3179-Asm2/main/Week_9_Homework/ne_110m_admin_0_countries.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "transform": [
                {
                    "calculate": "'Data is not available in ' + datum.properties.NAME",
                    "as": "note"
                }
            ],
            "mark": {
                "type": "geoshape",
                "fill": "#ddd",
                "stroke": "white",
                "strokeWidth": 1
            },
            "encoding": {
                "tooltip": {
                    "field": "note"
                }
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/chewyuhan/FIT3179-Asm2/main/Global%20Terrorism%20Index/data/Global%20Terrorism%20Index%202023.csv",
                "format": {
                    "type": "csv"
                }
            },
            "transform": [
                {
                    "lookup": "Country",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/chewyuhan/FIT3179-Asm2/main/Week_9_Homework/ne_110m_admin_0_countries.topojson",
                            "format": {
                                "type": "topojson",
                                "feature": "ne_110m_admin_0_countries"
                            }
                        },
                        "key": "properties.NAME"
                    },
                    "as": "geo"
                },
                {
                    "filter": "datum.Year == Year_selection"
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "#fff",
                "strokeWidth": 0.5
            },
            "encoding": {
                "shape": {
                    "field": "geo",
                    "type": "geojson"
                },
                "color": {
                    "field": "Score",
                    "type": "quantitative"
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "Rank",
                        "type": "quantitative",
                        "title": "Rank",
                        "format": ","
                    },
                    {
                        "field": "Score",
                        "type": "quantitative",
                        "title": "Score",
                        "format": ","
                    },
                    {
                        "field": "Incidents",
                        "type": "quantitative",
                        "title": "Incidents",
                        "format": ","
                    },
                    {
                        "field": "Fatalities",
                        "type": "quantitative",
                        "title": "Fatalities",
                        "format": ","
                    },
                    {
                        "field": "Injuries",
                        "type": "quantitative",
                        "title": "Injuries",
                        "format": ","
                    },
                    {
                        "field": "Hostages",
                        "type": "quantitative",
                        "title": "Hostages",
                        "format": ","
                    },
                    {
                        "field": "Year",
                        "type": "quantitative",
                        "title": "Year"
                    }
                ]
            }
        }
    ],
    "config": {}
}