{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1000,
    "height": 600,
    "title": "Terrorist Attacks per Country (2012-2021)",
    "data": {
        "url": "https://raw.githubusercontent.com/chewyuhan/FIT3179-Asm2/main/Global%20Terrorism%20Index/data/Merge_Global_Terrorism_Index.csv"
    },
    "params": [
        {
            "name": "Terrorist_attacks",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 2000,
                "step": 250,
                "name": "Terrorist Attacks: "
            }
        },
        {
            "name": "Region_selection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "Americas",
                    "Europe",
                    "Africa",
                    "Asia",
                    "Oceania"
                ],
                "labels": [
                    "Show All",
                    "Americas",
                    "Europe",
                    "Africa",
                    "Asia",
                    "Oceania"
                ],
                "name": "Region Selection: "
            }
        }
    ],
    "transform": [
        {
            "filter": "datum.Terrorist_attacks > Terrorist_attacks"
        },
        {
            "filter": "Region_selection == null || datum.Region == Region_selection"
        }
    ],
    "encoding": {
        "x": {
            "field": "Year",
            "type": "ordinal",
            "title": "Year",
            "axis": {
                "tickCount": 10
            }
        },
        "y": {
            "field": "Terrorist_attacks",
            "type": "quantitative",
            "axis": {
                "tickCount": 6
            }
        }
    },
    "layer": [
        {
            "selection": {
                "region_highlight": {
                    "type": "multi",
                    "fields": [
                        "Region"
                    ],
                    "bind": "legend"
                }
            },
            "mark": "circle",
            "encoding": {
                "size": {
                    "field": "Terrorist_attacks",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            500,
                            1000,
                        ],
                        "range": [
                            100,
                            500,
                            1000
                        ]
                    },
                    "legend": {
                        "format": ".1s"
                    }
                },
                "color": {
                    "field": "Region",
                    "type": "nominal"
                },
                "opacity": {
                    "condition": {
                        "selection": "region_highlight",
                        "value": 0.6
                    },
                    "value": 0
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal"
                    },
                    {
                        "field": "Terrorist_attacks",
                        "type": "quantitative"
                    },
                    {
                        "field": "Incidents",
                        "type": "quantitative",
                        "title": "Incidents",
                        "format": ","
                    },
                    {
                        "field": "Fatalities",
                        "type": "quantitative",
                        "title": "Fatalities",
                        "format": ","
                    },
                    {
                        "field": "Injuries",
                        "type": "quantitative",
                        "title": "Injuries",
                        "format": ","
                    },
                    {
                        "field": "Hostages",
                        "type": "quantitative",
                        "title": "Hostages",
                        "format": ","
                    }
                ]
            }
        }
    ]
}