{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Terrorist Attack Trend by Year (2012-2021)",
    "width": 800,
    "height": 400,
    "data": {
        "url": "https://raw.githubusercontent.com/chewyuhan/FIT3179-Asm2/main/Global%20Terrorism%20Index/data/Merge_Global_Terrorism_Index.csv"
    },
    "encoding": {
        "x": {
            "field": "Year",
            "type": "temporal",
            "axis": {
                "tickCount": 10,
                "format": "%Y",
                "values": [
                    "2012",
                    "2013",
                    "2014",
                    "2015",
                    "2016",
                    "2017",
                    "2018",
                    "2019",
                    "2020",
                    "2021"
                ]
            }
        }
    },
    "layer": [
        {
            "mark": "line",
            "encoding": {
                "y": {
                    "field": "Terrorist_attacks",
                    "type": "quantitative",
                    "aggregate": "mean"
                },
                "color": {
                    "field": "Country",
                    "type": "nominal"
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "Year",
                        "type": "temporal",
                        "title": "Year",
                        "format": "%Y"
                    },
                    {
                        "field": "Rank",
                        "type": "quantitative",
                        "title": "Rank"
                    },
                    {
                        "field": "Score",
                        "type": "quantitative",
                        "title": "Score"
                    },
                    {
                        "field": "Incidents",
                        "type": "quantitative",
                        "title": "Incidents"
                    },
                    {
                        "field": "Injuries",
                        "type": "quantitative",
                        "title": "Injuries"
                    },
                    {
                        "field": "Hostages",
                        "type": "quantitative",
                        "title": "Hostages"
                    }
                ],
                "size": {
                    "value": 3
                }
            }
        },
        {
            "mark": "circle",
            "encoding": {
                "y": {
                    "field": "Terrorist_attacks",
                    "type": "quantitative",
                    "aggregate": "max"
                },
                "color": {
                    "value": "red"
                },
                "size": {
                    "value": 200
                },
                "opacity": {
                    "value": 0.7
                }
            }
        }
    ],
    "config": {
        "text": {
            "align": "right",
            "dx": -5,
            "dy": 5
        },
        "legend": {
            "columns": 5,
            "symbolLimit": 153
        }
    }
}